<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Number of most recent photos to check:"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/RadioButtonGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RadioButton20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20" />

        <RadioButton
            android:id="@+id/RadioButton40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40" />

        <RadioButton
            android:id="@+id/RadioButton60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60" />

        <RadioButton
            android:id="@+id/RadioButton80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80" />

        <RadioButton
            android:id="@+id/RadioButton100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100" />
    </RadioGroup>

    <Button
        android:id="@+id/CalculatePictureLikesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Calculate likes" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="Last time calculated: " />

        <TextView
            android:id="@+id/LastTimeCalculated"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text=" Never " />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/LikesProgressBar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="16dp">

